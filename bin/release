#!/usr/bin/env bash

VERSION=$1

if [ -z "$VERSION" ]; then
  echo "Usage: $0 <version>"
  exit 1
fi

printf "module Propshaft\n  VERSION = \"$VERSION\"\nend\n" > ./lib/propshaft/version.rb
bundle
git add Gemfile.lock lib/propshaft/version.rb
git commit -m "Bump version for $VERSION"
git push
git tag v$VERSION
git push --tags
